<h2>Editing "<%= @post.title %>"</h2>
<%= form_tag post_path(@post), method: "patch" do %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="<%= @post.errors[:title].any? ? 'field_with_errors' : 'field'%>">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @post.title %>
  </div>

  <div class="<%= @post.errors[:category].any? ? 'field_with_errors' : 'field'%>">
    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category", @post.category %>
  </div>

  <div class="<%= @post.errors[:content].any? ? 'field_with_errors' : 'field'%>">
    <%= label_tag "content", "Content" %><br>
    <%= text_area_tag "content", @post.content %>
  </div>

  <%= submit_tag "Update" %>
<% end %>
